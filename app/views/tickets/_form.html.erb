<%= form_for([@project, @ticket]) do |f| %>
  <% if @ticket.errors.any? %>
    <% @ticket.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <%= f.submit %>
<% end %>
